<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hello"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Ui.activity.Login.HelloActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:contentDescription="Quay lại"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Biểu tượng/Logo ứng dụng -->
        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Biểu tượng ứng dụng To-Do List"
            android:src="@drawable/todolist1"/>

        <!-- Tiêu đề chào mừng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng đến với To-Do List"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#343A40"
            android:layout_marginBottom="8dp" />

        <!-- Mô tả ngắn -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý công việc hàng ngày của bạn một cách dễ dàng và hiệu quả."
            android:textSize="16sp"
            android:textColor="#6C757D"
            android:gravity="center"
            android:layout_marginBottom="64dp" />

        <!-- Nút Đăng nhập -->
        <Button
            android:id="@+id/btn_welcome_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Nút Đăng ký -->
        <Button
            android:id="@+id/btn_welcome_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Ký Tài Khoản Mới"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="#28A745"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
